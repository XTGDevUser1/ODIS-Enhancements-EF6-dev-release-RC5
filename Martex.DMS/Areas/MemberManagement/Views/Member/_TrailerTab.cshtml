@model Martex.DMS.DAL.Vehicle
@{
    string suffixMembershipID = ViewData["MembershipID"].ToString();
}
<form name="frm_Trailer_@suffixMembershipID" id="frm_Trailer_@suffixMembershipID" action="javascript:void(0);" relatedButtons="PlaceHolder_Membership_Vehicle_Trailer_Info_Buttons_@suffixMembershipID">
@Html.Partial("_TrailerBasicInformation", Model)
@Html.Partial("_TrailerSpecifications", Model)

<div class="clear"></div>
<div class="full-width hide" id="PlaceHolder_Membership_Vehicle_Trailer_Info_Buttons_@suffixMembershipID">
    <button id="btnSaveMembershipTrailerVehicleInformation_@suffixMembershipID" class="button green-gradient float-right mid-margin-left margin-bottom" type="button">
        Save</button>
    <button id="btnCancelMembershipTrailerVehicleInformation_@suffixMembershipID" class="button gray-gradient float-right margin-bottom" type="button" onclick="MembershipVehicleCancelButton('@suffixMembershipID');">
        Cancel</button>
</div>
</form>

<script type="text/javascript">

    function SaveTrailer(uniqueID) {
        
        return SaveForm('frm_Trailer_' + uniqueID, "Trailer");
    }

    
    $(function () {
        $("#frm_Trailer_@suffixMembershipID").validationEngine();

        $("#btnSaveMembershipTrailerVehicleInformation_@suffixMembershipID").click(function (e) {
            e.preventDefault();

            var uniqueID = '@suffixMembershipID';
            SaveTrailer(uniqueID);

            return false;
        });

    });
</script>