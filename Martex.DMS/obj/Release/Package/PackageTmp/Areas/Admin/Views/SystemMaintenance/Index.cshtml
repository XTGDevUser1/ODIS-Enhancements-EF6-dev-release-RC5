@using Martex.DMS.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ContentMaster.cshtml";
}
<link href="@Url.Content("~/Content/CustomTelerikStyle.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/DMSTabs.css")" rel="stylesheet" type="text/css" />
<div class="with-padding">
    <hgroup id="main-title" class="thin">
			<h1>System Maintenance</h1>			
		</hgroup>
    <div id="AdminSystemMaintenanceTabs" class="standard-tabs same-height">
        <ul class="tabs">
            @if (User.IsInRole(Martex.DMS.Common.RoleConstants.SysAdmin) || User.IsInRole(Martex.DMS.Common.RoleConstants.ClientAdmin))
            { 
                <li id="Users"><a href="@Url.Action("Index", "Users", new { area = "admin" })" class="icon-user">
                    User</a></li>
                <li id="Organizations"><a href="@Url.Action("Index", "Organizations", new { area = "admin" })" class="icon-user">
                    Organization</a></li>
        
                if (User.IsInRole(Martex.DMS.Common.RoleConstants.SysAdmin)) //CR # 335: Accessible only to Sys admin
                {
                <li id="Clients"><a href="@Url.Action("Index", "Clients", new { area = "admin" })" class="icon-user">
                    Client</a></li>
                }
                if (User.IsInRole(Martex.DMS.Common.RoleConstants.SysAdmin)) //CR # 335: Accessible only to Sys admin ; CR # 380 : Moveed this tab after Client tab
                {
                <li id="ProgramMaintenance"><a href="@Url.Action("Index", "ProgramMaintenance", new { area = "admin" })" class="icon-map">
                    Program</a></li>
                }
                <li id="DataGroups"><a href="@Url.Action("Index", "DataGroups", new { area = "admin" })" class="icon-user">
                    Data Groups</a></li>
        
                <li id="PhoneSystemConfiguration"><a href="@Url.Action("Index", "PhoneSystemConfiguration", new { area = "admin" })" class="icon-compass">
                    Phone System</a></li>
        
        
            }
        </ul>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $('#AdminSystemMaintenanceTabs').tabs();
    });
</script>
