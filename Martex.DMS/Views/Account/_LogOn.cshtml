@model Martex.DMS.Models.LogOnModel
@{
    ViewBag.Title = "Login";
}

<form method="post" action="" id="form-login" class="input-wrapper blue-gradient" formtitle="Login" autocomplete="off">
    @Html.Hidden("returnUrl", Request.QueryString["returnUrl"])
    <input type="hidden" id="odisfield" name="odisfield" />
    <ul class="inputs black-input large">
        <!-- The autocomplete="off" attributes is the only way to prevent webkit browsers from filling the inputs with yellow -->
        <li>
            <span class="icon-user mid-margin-right"></span>

            @Html.TextBoxFor(m => m.UserName, new
   {
       name = "login_username",
       id = "login_username",
       value = "",
       @class = "validate[required] input-unstyled with-tooltip tooltip-right",
       autocomplete = "false",
       title = "User name",
       placeholder = "Username",
       @error_required = "Please type your User name"
   })
        </li>
        <li>
            <span class="icon-lock mid-margin-right"></span>
            @Html.PasswordFor(m => m.Password, new
   {
       name = "login_password",
       id = "login_password",
       value = "",
       @class = "validate[required] input-unstyled with-tooltip tooltip-right",
       autocomplete = "new-password",
       title = "Password",
       placeholder = "Password",
       @error_required = "Please type your password"
   })

        </li>
    </ul>

    <button type="submit" class="button huge full-width green-gradient" id="login">
        Log In
    </button>

