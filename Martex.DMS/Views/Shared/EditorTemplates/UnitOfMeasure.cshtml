@using Telerik.Web.Mvc.UI;

@(Html.Telerik().ComboBox()
      .Name(ViewData.TemplateInfo.GetFullHtmlFieldName(string.Empty))
              .AutoFill(true)
              .HighlightFirstMatch(true)
              .Filterable(filtering =>
                                    {
                                        filtering.FilterMode(AutoCompleteFilterMode.StartsWith);
                                        filtering.MinimumChars(0);
                                    })
          .BindTo(ViewData[Martex.DMS.ActionFilters.StaticData.PODetailsUOM.ToString()] as IEnumerable<SelectListItem>)
      .ClientEvents(events=>{
          events.OnChange("onComboBoxChange_UnitOfMeasure");
      })
      .SelectedIndex(0)
          .DropDownHtmlAttributes(new { style = "width:250px;" })
              .Placeholder("Select")
      )