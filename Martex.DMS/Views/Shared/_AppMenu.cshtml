<script type="text/javascript">
    var area = '@ViewContext.RouteData.DataTokens["area"]';
    $(function () {
        $('.AppMenu li a').each(function () {
            $(this).removeClass("orange");
        });

        if (area.length == 0) {
            $('#menu_top_dispatch').addClass("orange");
        }
        else {
            $('.AppMenu li a').each(function () {
                if ($(this).attr('data') == area) {
                    $(this).addClass("orange");
                }
            });
        }
    });
</script>
