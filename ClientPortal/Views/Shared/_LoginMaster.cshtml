@using System.Configuration
<!DOCTYPE html>
<!--[if IEMobile 7]><html class="no-js iem7 oldie linen"><![endif]-->
<!--[if (IE 7)&!(IEMobile)]><html class="no-js ie7 oldie linen" lang="en"><![endif]-->
<!--[if (IE 8)&!(IEMobile)]><html class="no-js ie8 oldie linen" lang="en"><![endif]-->
<!--[if (IE 9)&!(IEMobile)]><html class="no-js ie9 carbon" lang="en"><![endif]-->
<!--[if (gt IE 9)|(gt IEMobile 7)]><!-->
<html class="no-js carbon" lang="en">
<!--<![endif]-->
<head>
    <title>O.D.I.S. - Optimized Dispatch Information System</title>
    <meta charset="utf-8">
    @*<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">*@
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="HandheldFriendly" content="True">
    <meta name="MobileOptimized" content="320">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <!-- For all browsers -->
    <link rel="stylesheet" href="@Url.Content("~/css/reset.css?v=1")">
    <link rel="stylesheet" href="@Url.Content("~/css/style.css?v=1")">
    <link rel="stylesheet" href="@Url.Content("~/css/colors.css?v=1")">
    <link rel="stylesheet" media="print" href="@Url.Content("~/css/print.css?v=1")">
    <!-- For progressively larger displays -->
    <link rel="stylesheet" media="only all and (min-width: 480px)" href="@Url.Content("~/css/480.css?v=1")">
    <link rel="stylesheet" media="only all and (min-width: 768px)" href="@Url.Content("~/css/768.css?v=1")">
    <link rel="stylesheet" media="only all and (min-width: 992px)" href="@Url.Content("~/css/992.css?v=1")">
    <link rel="stylesheet" media="only all and (min-width: 1200px)" href="@Url.Content("/css/1200.css?v=1")">
    <!-- For Retina displays -->
    <link rel="stylesheet" media="only all and (-webkit-min-device-pixel-ratio: 1.5), only screen and (-o-min-device-pixel-ratio: 3/2), only screen and (min-device-pixel-ratio: 1.5)"
        href="@Url.Content("~/css/2x.css?v=1")">
    <!-- Additional styles -->
    <link rel="stylesheet" href="@Url.Content("~/css/styles/form.css?v=1")"/>
    <link rel="stylesheet" href="@Url.Content("~/css/styles/switches.css?v=1")"/>
    <!-- Login pages styles -->
    <link rel="stylesheet" media="screen" href="@Url.Content("~/css/login.css?v=1")"/>
    <link rel="stylesheet" media="screen" href="@Url.Content("~/js/libs/formValidator/developr.validationEngine.css")"/>
    <!-- JavaScript at bottom except for Modernizr -->
    <script src="@Url.Content("~/js/libs/modernizr.custom.js")"></script>
    <!-- For Modern Browsers -->
    <link rel="shortcut icon" href="@Url.Content("~/img/favicons/favicon.png")">
    <link rel="icon" href="~/img/favicons/favicon.png" sizes="48x48" />
    <!-- For everything else -->
    <link rel="shortcut icon" href="@Url.Content("~/img/favicons/favicon.ico")">
    <!-- For retina screens -->
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="@Url.Content("~/img/favicons/apple-touch-icon-retina.png")">
    <!-- For iPad 1-->
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="@Url.Content("~/img/favicons/apple-touch-icon-ipad.png")">
    <!-- For iPhone 3G, iPod Touch and Android -->
    <link rel="apple-touch-icon-precomposed" href="@Url.Content("~/img/favicons/apple-touch-icon.png")">
    <!-- iOS web-app metas -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <!-- Startup image for web apps -->
    <link rel="apple-touch-startup-image" href="../img/splash/ipad-landscape.png" media="screen and (min-device-width: 481px) and (max-device-width: 1024px) and (orientation:landscape)">
    <link rel="apple-touch-startup-image" href="../img/splash/ipad-portrait.png" media="screen and (min-device-width: 481px) and (max-device-width: 1024px) and (orientation:portrait)">
    <link rel="apple-touch-startup-image" href="../img/splash/iphone.png" media="screen and (max-device-width: 320px)">
</head>
<body>
    <div>
        <div id="container">
            <img src="../../img/ODISlogo.png" height="403px" width="280px" alt="O.D.I.S. - Optimized Dispatch Information System" class="margin-bottom" />
            <div id="form-wrapper">
                <div id="form-block" class="scratch-metal">
                    <div id="form-viewport">
                        @RenderBody()
                    </div>
                </div>
            </div>
           
            <p class="align-center">
                &copy; 2013 National Motor Club, Inc.</p>
            <p class="small no-padding no-margin-bottom">Ver @ViewData["AppVersion"]</p>
            <p class="small no-padding no-margin-bottom">Build number : @ConfigurationManager.AppSettings["BuildNumber"]</p>
            <p class="small no-padding no-margin-bottom">Published on : @ConfigurationManager.AppSettings["BuildDate"]</p>
        </div>
    </div>
    <!-- JavaScript at the bottom for fast page loading -->
    <!-- Scripts -->
    <script src="@Url.Content("~/js/libs/jquery-1.7.2.min.js")"></script>
    <script src="@Url.Content("~/js/setup.js")"></script>
    <!-- Template functions -->
    <script src="@Url.Content("~/js/developr.input.js")"></script>
    <script src="@Url.Content("~/js/developr.message.js")"></script>
    <script src="@Url.Content("~/js/developr.notify.js")"></script>
    <script src="@Url.Content("~/js/developr.tooltip.js")"></script>
    <script src="@Url.Content("~/js/login.js")"></script>
    <script src="@Url.Content("~/js/libs/formValidator/jquery.validationEngine.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/libs/formValidator/languages/jquery.validationEngine-en.js")" type="text/javascript"></script>
    <script language="javascript" type="text/javascript">
    <!--
        $(function () {

            $("input[type=text]").first().focus();
        });
    //-->
	</script>
</body>
</html>
