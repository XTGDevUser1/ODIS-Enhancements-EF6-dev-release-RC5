<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:controls="clr-namespace:XLabs.Forms.Controls;assembly=XLabs.Forms"
             VerticalOptions="FillAndExpand"
             x:Class="ODISMember.History">

  <ScrollView Style="{StaticResource MainLayout}" VerticalOptions="FillAndExpand">
    <StackLayout VerticalOptions="FillAndExpand">
      <controls:ExtendedLabel x:Name="lblNoRecords" Style="{StaticResource SubHeaderLabelStyle}" Text="No records found" HorizontalOptions="CenterAndExpand" IsVisible="false" />
      <ListView x:Name="listHistory" HasUnevenRows="true"/>
    </StackLayout>
  </ScrollView>
  </ContentView>