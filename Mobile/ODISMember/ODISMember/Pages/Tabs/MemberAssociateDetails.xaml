<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:XLabs.Forms.Controls;assembly=XLabs.Forms"
             x:Class="ODISMember.Pages.Tabs.MemberAssociateDetails">
  <StackLayout VerticalOptions="FillAndExpand">
  <StackLayout Padding="30,30,0,0">
    <controls:ExtendedLabel x:Name="lblMemberNumber" Style="{StaticResource BaseLabelStyle}" HorizontalTextAlignment="Start" VerticalOptions="Start"/>
    <controls:ExtendedLabel x:Name="lblFullName" Style="{StaticResource BaseLabelStyle}" HorizontalTextAlignment="Start" VerticalOptions="Start"/>        
    <controls:ExtendedLabel x:Name="lblEmail" Style="{StaticResource BaseLabelStyle}" HorizontalTextAlignment="Start" VerticalOptions="Start"/>
    <controls:ExtendedLabel x:Name="lblPhone" Style="{StaticResource BaseLabelStyle}" HorizontalTextAlignment="Start" VerticalOptions="Start"/>
    <controls:ExtendedLabel x:Name="lblDateOfBirth" Style="{StaticResource BaseLabelStyle}" HorizontalTextAlignment="Start" VerticalOptions="Start"/>
  </StackLayout>
  <Button x:Name="btnDelete" Style="{StaticResource BaseButtonStyle}" Text="Delete" VerticalOptions="EndAndExpand" IsVisible="False"/>
  </StackLayout>
</ContentPage>