<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:XLabs.Forms.Controls;assembly=XLabs.Forms"
             x:Class="ODISMember.Pages.Tabs.MemberInActive">
  <ScrollView>
  <StackLayout Spacing="50" x:Name="stackInActive" VerticalOptions="CenterAndExpand" Padding="10">
   <controls:ExtendedLabel Style="{StaticResource SubHeaderLabelStyle}" Text="Your membership has expired.  You may renew your membership now using your phone application or by calling member services" HorizontalOptions="Center" />
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="150" />
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="1*" />
        <ColumnDefinition Width="1*" />
      </Grid.ColumnDefinitions>
      <Button Grid.Column="0" Grid.Row="0" Text="Renew Now" Style="{StaticResource BaseButtonStyle}" VerticalOptions="Center" x:Name="btnRenew" HeightRequest="60"/>
      <Button Grid.Column="1" Grid.Row="0" Text="Call Member Services" Style="{StaticResource BaseButtonStyle}" VerticalOptions="Center" x:Name="btnCallMemberService" HeightRequest="60"/>
    </Grid>
  </StackLayout>
  </ScrollView>
</ContentView>