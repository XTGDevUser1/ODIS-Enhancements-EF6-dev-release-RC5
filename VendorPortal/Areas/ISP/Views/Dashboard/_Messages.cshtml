@model List<Martex.DMS.DAL.Message>
<div class="small-margin-top" id="div_Messages">
    <div class="tabs-content">
        <div class="with-padding">
            <div>
                @if (Model.Count() == 0)
                {
                    <span class="alert alert-info">You have no messages. </span>
                }
                else
                {
                    <div>
                        @foreach (var message in Model)
                        {
                            <p class="big-message"><strong>@message.Subject</strong><br>
                            @Html.Raw(@message.MessageText)</p>
                        }
                   </div>
                }
            </div>
        </div>
    </div>
</div>
